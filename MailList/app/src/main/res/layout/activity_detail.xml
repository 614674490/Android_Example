<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/detial_tv"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="The detailed information"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="30dp"
                android:text="头像："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:id="@+id/headPortrait"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="学号："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:id="@+id/studentIdEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="姓名："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/nameEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="电话："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:inputType="phone"
                android:id="@+id/telephoneEdit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="班级："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/classEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="生日："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/birthdayEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="性别："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:id="@+id/sexEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="宿舍："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:id="@+id/dormitoryEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="籍贯："
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/nativePlaceEdit"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:id="@+id/btnUpdate"/>

            <Button
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorWhite"
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeletedate"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>